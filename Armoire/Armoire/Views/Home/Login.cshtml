@using Armoire.Common
@using Armoire.Common.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<hr />

<div class="container log" id="loginContainer">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 darkbackground">
        <div class="card log">
            <div class="card-header"><h3>Sign In</h3> Don't have an account <a href="#">sign up</a> for one today!</div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" placeholder="Enter username">
                        <a href"#">Forgot username</a>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" placeholder="Password">
                        <a href"#">Forgot password</a>
                    </div>
                    <div class="col-sm-6"><button type="submit" class="btn btn-primary btn-sm btn-block">Submit</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4"></div>
</div>

