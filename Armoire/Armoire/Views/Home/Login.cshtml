@using Armoire.Common
@using Armoire.Common.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<hr />

<div class="container log" id="loginContainer">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 darkbackground">
        <div class="card log">
            <div class="card-header"><h3>Sign In</h3> Don't have an account <a href="#">sign up</a> for one today!</div>
            <div class="card-body">
                <form method="get" asp-controller="Home" asp-action="Login" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" type="text" class="form-control" id="Username" placeholder="Enter username">
                    <a href"#">Forgot username</a>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
                        <a href"#">Forgot password</a>
                    </div>
                    <div class="col-sm-6"><button type="submit" class="btn btn-primary btn-sm btn-block">Submit</button></div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4"></div>
</div>

